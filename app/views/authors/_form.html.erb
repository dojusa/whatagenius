<%= form_for @author, :html => { :multipart => true } do |f| %>
	<%= error_messages(@author) %>

	<p>
		<% if @author.avatar? %>
			<%= image_tag @author.avatar.url(:square), :class => "img-circle"%>
		<% else %>
			<%= image_tag "avatar.png", size: "100", :class => "img-circle"%>
		<%end%>
	
		<%= f.file_field :avatar %>
	</p>

	<p>
		<%= f.label t :name, :class => 'control-label' %>
		<%= f.text_field :name, :class => 'form-control' %>
	</p>
	<p>
		<%= f.label :nickname, :class => 'control-label' %>
		<%= f.text_field :nickname, class: 'form-control' %>
	</p>
	
	<p>
		<%= f.label :description, :class => 'control-label' %>
		<br/>
		<%= f.text_field :description, class: "form-control" %>
	</p>
	
	<%= f.submit class: "btn btn-success"%>

<% end %>

