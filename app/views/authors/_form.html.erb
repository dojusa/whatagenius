<%= form_for @author do |f| %>
	<%= error_messages(@author) %>

	<p>
		<%= f.label :name, :class => 'control-label' %>
		<%= f.text_field :name, :class => 'form-control' %>
	</p>
	<p>
		<%= f.label :nickname, :class => 'control-label' %>
		<%= f.text_field :nickname, :class => 'form-control' %>
	</p>
	
	<%= f.submit %>

<% end %>